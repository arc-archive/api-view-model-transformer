{
  "name": "@api-components/api-view-model-transformer",
  "description": "AMF model transformer to a form view model used in API components.",
  "version": "4.2.2",
  "license": "Apache-2.0",
  "main": "index.js",
  "module": "index.js",
  "keywords": [
    "web-components",
    "api-console",
    "api-components",
    "model-helper"
  ],
  "authors": [
    "Pawel Psztyc"
  ],
  "contributors": [
    "Pawel Psztyc",
    "Francisco Di Giandomenico"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/advanced-rest-client/api-view-model-tranformer.git"
  },
  "bugs": {
    "url": "https://github.com/advanced-rest-client/api-view-model-tranformer/issues",
    "email": "arc@mulesoft.com"
  },
  "dependencies": {
    "@advanced-rest-client/events-target-mixin": "^3.2.3",
    "@api-components/amf-helper-mixin": "^4.2.0",
    "@api-components/api-example-generator": "^4.4.5",
    "lit-element": "^2.4.0"
  },
  "devDependencies": {
    "@advanced-rest-client/arc-demo-helper": "^2.2.0",
    "@api-components/api-model-generator": "^0.2.9",
    "@open-wc/eslint-config": "^4.0.1",
    "@open-wc/testing": "^2.5.32",
    "@open-wc/testing-karma": "^4.0.9",
    "@web/test-runner": "^0.9.7",
    "@web/test-runner-playwright": "^0.6.4",
    "deepmerge": "^4.2.1",
    "es-dev-server": "^1.57.8",
    "eslint-config-prettier": "^6.15.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "sinon": "^9.2.1",
    "typescript": "^4.0.5",
    "typescript-lit-html-plugin": "^0.9.0"
  },
  "scripts": {
    "start": "es-dev-server --app-index demo/index.html --node-resolve --open --watch",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:types": "tsc",
    "lint": "npm run lint:eslint",
    "format": "npm run format:eslint",
    "test": "web-test-runner test/**/*.test.js --coverage --node-resolve --playwright --browsers chromium firefox webkit",
    "test:watch": "web-test-runner test/**/*.test.js --node-resolve --watch",
    "gen:wc": "wca analyze \"*.js\" --outFile custom-elements.json",
    "generate-model": "node demo/model.js",
    "prepare": "node demo/model.js"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "overrides": [
      {
        "files": [
          "**/demo/**/*.js",
          "**/test/**/*.js",
          "**/demo/**/*.html"
        ],
        "rules": {
          "no-console": "off",
          "no-plusplus": "off",
          "no-unused-expressions": "off",
          "class-methods-use-this": "off",
          "import/no-extraneous-dependencies": "off"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  }
}
